{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Mon profil</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        {# Partie gauche : avatar, email, rôles #}
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <img src="{{ user.avatar ?: 'https://ui-avatars.com/api/?name=' ~ user.email|url_encode ~ '&background=random&size=120' }}" 
                         alt="Avatar" class="rounded-circle mb-3" width="120" height="120">
                    <h5>{{ user.email }}</h5>
                    <p>Rôles : {{ user.roles|join(', ') }}</p>

                    {# Bouton pour afficher le formulaire avatar #}
                    <button class="btn btn-sm btn-secondary mb-2" type="button" onclick="document.getElementById('avatar-form').classList.toggle('d-none')">
                        Mettre à jour l'avatar
                    </button>

                    {# Formulaire avatar caché par défaut #}
                    <div id="avatar-form" class="d-none">
                        {{ form_start(profileForm, {'attr': {'enctype':'multipart/form-data'}}) }}
                            {{ form_row(profileForm.avatar) }}
                            {{ form_row(profileForm.avatarFile) }}
                            <button class="btn btn-sm btn-primary mt-2">Enregistrer</button>
                        {{ form_end(profileForm) }}
                    </div>

                    <a href="{{ path('app_profile') }}?regen_avatar=1" class="btn btn-sm btn-secondary mt-2">Regénérer l'avatar</a>
                </div>
            </div>
        </div>

        {# Partie droite : informations, mot de passe, actions admin #}
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Informations personnelles</h5>
                    <p><strong>Email :</strong> {{ user.email }}</p>
                    <p><strong>Rôles :</strong> {{ user.roles|join(', ') }}</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Modifier le mot de passe</h5>
                    {{ form_start(passwordForm) }}
                        {{ form_row(passwordForm.plainPassword.first) }}
                        {{ form_row(passwordForm.plainPassword.second) }}
                        <button class="btn btn-primary mt-2">Mettre à jour</button>
                    {{ form_end(passwordForm) }}
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Actions administrateur</h5>
                        <a href="{{ path('app_article_new') }}" class="btn btn-primary">Créer un article</a>
                        <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Voir tous les articles</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
