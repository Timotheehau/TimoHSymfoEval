<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Gestionnaire d'élevage{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    {# Style Dofus #}
    <style>
        body {
            background: #f7f2e8;
            font-family: 'Luckiest Guy', cursive;
        }

        .card {
            border: 2px solid #e09c0b;
            border-radius: 12px;
            background: linear-gradient(145deg, #fff3e0, #ffe0b2);
            box-shadow: 4px 4px 10px rgba(0,0,0,0.2);
        }

        .btn-primary {
            background-color: #f7a300;
            border-color: #f7a300;
        }

        .btn-primary:hover {
            background-color: #ffbf47;
            border-color: #ffbf47;
        }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 6px 6px 20px rgba(0,0,0,0.4);
            transition: all 0.3s ease;
        }

        nav.navbar {
            background-image: url('/images/wood_texture.png'); /* optionnel, image de fond type Dofus */
            border-bottom: 3px solid #f7a300;
        }
    </style>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">Dragodingo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_article_index' %}active{% endif %}" 
                       href="{{ path('app_article_index') }}">Montures</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_article_new' %}active{% endif %}" 
                       href="{{ path('app_article_new') }}">Créer un article</a>
                </li>
                {% endif %}
                <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') == 'about' %}active{% endif %}" 
                href="{{ path('about') }}">À propos</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile') }}">Bonjour {{ app.user.email }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}
    <!-- Contenu spécifique de chaque page -->
    {% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
