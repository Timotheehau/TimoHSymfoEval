{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Bannière de bienvenue -->
    <div class="jumbotron p-5 bg-light rounded-3 text-center mb-5">
        <h1 class="display-5">Gestionnaire d'élevage Dofus</h1>
        <p class="lead">Consultez toutes les infos liées à l'élevage sur Dofus</p>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_article_new') }}" class="btn btn-success btn-lg mt-3">Créer un article</a>
        {% endif %}
    </div>

    <!-- Derniers articles -->
    <h2 class="mb-4">Derniers ajouts</h2>
    {% if latestArticles is empty %}
        <div class="alert alert-info">Aucun article pour le moment.</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for article in latestArticles %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <pre class="card-text">{{ article.content }}</pre>
                            <div class="mt-auto">
                                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
